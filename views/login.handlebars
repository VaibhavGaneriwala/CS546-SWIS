<div class="container">
    <div class="left-panel">
        <div>
            <img src="/images/swisLogo.png" alt="SWIS Logo">
            <h1>Smart Warehouse Inventory System</h1>
        </div>
    </div>
    <div class="right-panel">
        <div class="form-container">
            <img src="/images/swisLogo.png" alt="SWIS Logo">
            <div class="error-message" style="display: {{#if error}}block{{else}}none{{/if}}">{{error}}</div>
            <h2>Log in to your account</h2>
            <p>Welcome back! Please enter your details.</p>
            <form action="/login" method="POST">
                <div class="form-row">
                    <label for="username">Username</label>
                    <input id="username" name="username" type="text" placeholder="Enter your username" required
                        value="{{username}}">
                </div>
                <div class="form-row">
                    <label for="password">Password</label>
                    <input id="password" name="password" type="password" placeholder="Password" required value="">
                </div>
                <button class="btn" type="submit">Sign in</button>
            </form>
            <div class="signup">
                <a href="/register">Don't have an account? Sign up</a>
            </div>
        </div>
    </div>
</div>
<script src="/js/main.js"></script>