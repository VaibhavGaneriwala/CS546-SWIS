{{#contentFor "styles"}}
<link rel="stylesheet" href="/css/reports.css" />
{{/contentFor}}

<div class="container">
  <aside class="sidebar">
    <h2 class="logo">SWIS</h2>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="/inventory">Inventory</a>
      <a class="active" href="/reports">Reports</a>
      <a href="/settings">Settings</a>
      <a href="/logout">Log Out</a>
    </nav>
  </aside>

  <main class="main-content">
    <h1>Reports Overview</h1>

    <div class="report-cards">
        <div class="card">
            <h3>Total Products</h3>
            <p>{{totalProducts}}</p>
        </div>
        <div class="card">
            <h3>Total Transactions</h3>
            <p>{{totalTransactions}}</p>
        </div>
        <div class="card">
            <h3>Low Stock Items</h3>
            <p>{{totalLowStock}}</p>
        </div>
    </div>

    <section class="charts">
        <h3>Current Stock Levels</h3>
        <canvas id="stockChart"
            data-labels='{{{json stockChart.labels}}}'
            data-values='{{{json stockChart.values}}}'>
        </canvas>

        <h3>Low Stock Distribution</h3>
        <canvas id="lowStockChart"
            data-labels='{{{json lowStockChart.labels}}}'
            data-values='{{{json lowStockChart.values}}}'>
        </canvas>

        <h3>Top Selling Products</h3>
        <canvas id="topSellingChart"
            data-labels='{{{json topSellingChart.labels}}}'
            data-values='{{{json topSellingChart.values}}}'>
        </canvas>
    </section>

  </main>
</div>

{{#contentFor "scripts"}}
  <script src="/js/reports.js"></script>
{{/contentFor}}